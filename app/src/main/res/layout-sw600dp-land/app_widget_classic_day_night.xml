<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_widget_classic"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/app_widget_background"
    android:theme="@style/Theme.Material3.DynamicColors.DayNight"
    android:backgroundTint="?attr/colorSurface">

    <ImageView
        android:id="@+id/image"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/app_widget_background"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/backgrounds/scenic[6]" />

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/media_actions"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layoutDirection="ltr"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp">

            <ImageButton
                android:id="@+id/button_prev"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/app_widget_buttons_circular_daynight"
                android:scaleType="fitCenter"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                tools:src="@drawable/ic_skip_previous"
                tools:tint="?android:attr/textColorPrimary"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/button_toggle_play_pause"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/app_widget_buttons_circular_daynight"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"
                tools:src="@drawable/ic_play_arrow"
                tools:tint="?android:attr/textColorPrimary"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/button_next"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/app_widget_buttons_circular_daynight"
                android:scaleType="fitCenter"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                tools:src="@drawable/ic_skip_next"
                tools:ignore="ContentDescription"
                tools:tint="?android:attr/textColorPrimary" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/button_update"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/app_widget_buttons_circular_daynight"
            android:scaleType="fitCenter"
            android:layout_marginEnd="5dp"
            tools:src="@drawable/ic_refresh"
            tools:tint="?android:attr/textColorPrimary"/>

        <LinearLayout
            android:id="@+id/media_titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/button_update"
            android:layout_above="@+id/media_actions"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAppearance="@style/TextViewSubtitle3"
                android:textColor="?android:attr/textColorPrimary"
                android:textAlignment="center"
                tools:text="Title" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAppearance="@style/TextViewNormal3"
                android:textColor="?android:attr/textColorPrimary"
                android:textAlignment="center"
                tools:text="Text" />

            <TextView
                android:id="@+id/songText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAppearance="@style/TextViewNormal3"
                android:textColor="?android:attr/textColorPrimary"
                android:textAlignment="center"
                tools:text="02:54/06:34" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>