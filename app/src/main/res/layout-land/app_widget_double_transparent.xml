<?xml version="1.0" encoding="utf-8"?>
<!--android:theme="@style/Theme.Material3.DynamicColors.DayNight"-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_widget_double"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_widget_background"
    android:backgroundTint="?attr/colorSurface"
    android:orientation="horizontal"
    android:theme="@style/Theme.AppWidget.Transparent"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:id="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/app_widget_background"
        android:backgroundTint="@color/transparent" >
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:background="@drawable/app_widget_background"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic[6]"
                tools:ignore="ContentDescription" />

            <RelativeLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/songText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_toStartOf="@id/media_actions"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textAppearance="@style/TextViewNormal3"
                    android:textColor="@color/md_white_1000"
                    tools:text="02:54/06:34" />

                <RelativeLayout
                    android:id="@+id/media_actions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/button_prev"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/app_widget_buttons_circular"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/ic_skip_previous"
                        tools:tint="@color/md_white_1000" />

                    <ImageButton
                        android:id="@+id/button_toggle_play_pause"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="20dp"
                        android:layout_toEndOf="@id/button_prev"
                        android:background="@drawable/app_widget_buttons_circular"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/ic_play_arrow"
                        tools:tint="@color/md_white_1000" />

                    <ImageButton
                        android:id="@+id/button_next"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_toEndOf="@id/button_toggle_play_pause"
                        android:background="@drawable/app_widget_buttons_circular"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/ic_skip_next"
                        tools:tint="@color/md_white_1000" />

                    <ImageButton
                        android:id="@+id/button_update"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/button_next"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/app_widget_buttons_circular"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/ic_refresh"
                        tools:tint="@color/md_white_1000" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/media_titles"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/songText"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textAppearance="@style/TextViewSubtitle4"
                        android:textColor="@color/md_white_1000"
                        tools:text="Title" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/up_next"
        android:layout_width="match_parent"
        android:layout_height="50.5dp"
        android:background="@drawable/app_widget_background"
        android:backgroundTint="@color/transparent"
        android:layout_below="@id/controls"
        android:layout_marginTop="1.5dp">

        <TextView
            android:id="@+id/up_next_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/up_next"
            android:paddingStart="0dp"
            android:paddingEnd="50.5dp"
            android:layout_toEndOf="@id/next_image"
            android:textAppearance="@style/TextViewHeadline8"
            android:textAlignment="center"
            android:textColor="@color/md_white_1000"/>

        <RelativeLayout
            android:id="@+id/next_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="50.5dp"
                android:layout_height="50.5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/app_widget_background"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic[6]" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/imageTextContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/up_next_text"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/next_image">

            <TextView
                android:id="@+id/next_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textAppearance="@style/TextViewNormal3"
                android:textColor="@color/md_white_1000"
                tools:text="Title" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>