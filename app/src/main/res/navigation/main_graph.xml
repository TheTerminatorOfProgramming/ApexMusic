<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/action_home">

    <fragment
        android:id="@+id/genreDetailsFragment"
        android:name="com.ttop.app.apex.ui.fragments.genres.GenreDetailsFragment"
        android:label="GenreDetailsFragment"
        tools:layout="@layout/fragment_playlist_detail">
        <argument
            android:name="extra_genre"
            app:argType="com.ttop.app.apex.model.Genre" />
    </fragment>

    <fragment
        android:id="@+id/playlistDetailsFragment"
        android:name="com.ttop.app.apex.ui.fragments.playlists.PlaylistDetailsFragment"
        android:label="PlaylistDetailsFragment"
        tools:layout="@layout/fragment_playlist_detail">
        <argument
            android:name="extra_playlist"
            app:argType="com.ttop.app.apex.db.PlaylistWithSongs" />
    </fragment>

    <fragment
        android:id="@+id/albumDetailsFragment"
        android:name="com.ttop.app.apex.ui.fragments.albums.AlbumDetailsFragment"
        android:label="AlbumDetailsFragment"
        tools:layout="@layout/fragment_album_details">
        <argument
            android:name="extra_album_id"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/artistDetailsFragment"
        android:name="com.ttop.app.apex.ui.fragments.artists.ArtistDetailsFragment"
        android:label="ArtistDetailsFragment"
        tools:layout="@layout/fragment_artist_details">
        <argument
            android:name="extra_artist_id"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/albumArtistDetailsFragment"
        android:name="com.ttop.app.apex.ui.fragments.artists.AlbumArtistDetailsFragment"
        android:label="AlbumArtistDetailsFragment"
        tools:layout="@layout/fragment_artist_details">
        <argument
            android:name="extra_artist_name"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.ttop.app.apex.ui.fragments.library.LibraryFragment"
        android:label=""
        tools:layout="@layout/fragment_library" />

    <fragment
        android:id="@+id/detailListFragment"
        android:name="com.ttop.app.apex.ui.fragments.other.DetailListFragment"
        android:label="DetailListFragment">
        <argument
            android:name="type"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/action_search"
        android:name="com.ttop.app.apex.ui.fragments.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/settings_fragment"
        android:name="com.ttop.app.apex.ui.fragments.settings.SettingsFragment" />

    <fragment
        android:id="@+id/action_album"
        android:name="com.ttop.app.apex.ui.fragments.albums.AlbumsFragment"
        tools:layout="@layout/fragment_main_recycler" />

    <fragment
        android:id="@+id/action_artist"
        android:name="com.ttop.app.apex.ui.fragments.artists.ArtistsFragment"
        tools:layout="@layout/fragment_main_recycler" />

    <fragment
        android:id="@+id/action_song"
        android:name="com.ttop.app.apex.ui.fragments.songs.SongsFragment"
        tools:layout="@layout/fragment_main_recycler" />

    <fragment
        android:id="@+id/action_genre"
        android:name="com.ttop.app.apex.ui.fragments.genres.GenresFragment"
        tools:layout="@layout/fragment_main_recycler" />

    <fragment
        android:id="@+id/action_playlist"
        android:name="com.ttop.app.apex.ui.fragments.playlists.PlaylistsFragment"
        tools:layout="@layout/fragment_main_recycler" />

    <fragment
        android:id="@+id/action_folder"
        android:name="com.ttop.app.apex.ui.fragments.folder.FoldersFragment"
        tools:layout="@layout/fragment_folder" />

    <fragment
        android:id="@+id/action_home"
        android:name="com.ttop.app.apex.ui.fragments.home.HomeFragment"
        android:label=""
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/action_settings_fragment"
        android:name="com.ttop.app.apex.ui.fragments.settings.SettingsFragment"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/user_info_fragment"
        android:name="com.ttop.app.apex.ui.fragments.other.UserInfoFragment" />

    <fragment
        android:id="@+id/playing_queue_fragment"
        android:name="com.ttop.app.apex.ui.fragments.queue.PlayingQueueFragment" />

    <fragment
        android:id="@+id/lyrics_fragment"
        android:name="com.ttop.app.apex.ui.fragments.lyrics.LyricsFragment" />
</navigation>