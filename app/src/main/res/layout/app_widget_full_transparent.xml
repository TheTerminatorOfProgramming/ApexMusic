<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_widget_background"
    android:theme="@style/Theme.AppWidget.Transparent"
    android:backgroundTint="?attr/colorSurface"
    android:id="@+id/app_widget_full">

    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/button_update">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            tools:ignore="ContentDescription"
            tools:src="@drawable/default_album_art" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/button_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/media_actions"
        android:background="@drawable/app_widget_buttons_circular"
        android:scaleType="fitCenter"
        tools:src="@drawable/ic_refresh"
        tools:tint="@color/ate_secondary_text_dark" />

    <LinearLayout
        android:id="@+id/media_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layoutDirection="ltr"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/media_titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/md_white_1000"
                android:textAlignment="center"
                tools:text="Title" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/md_white_1000"
                android:textAlignment="center"
                tools:text="Text" />

            <TextView
                android:id="@+id/songText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/md_white_1000"
                android:textAlignment="center"
                tools:text="01:32/04:51" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/media_action"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layoutDirection="ltr"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_prev"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toStartOf="@id/button_toggle_play_pause"
                android:layout_marginEnd="50dp"
                android:background="@drawable/app_widget_buttons_circular"
                android:scaleType="fitCenter"
                tools:src="@drawable/ic_skip_previous"
                tools:tint="@color/ate_secondary_text_dark" />

            <ImageButton
                android:id="@+id/button_toggle_play_pause"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/app_widget_buttons_circular"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"
                tools:src="@drawable/ic_play_arrow"
                tools:tint="@color/ate_secondary_text_dark" />

            <ImageButton
                android:id="@+id/button_next"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toEndOf="@id/button_toggle_play_pause"
                android:layout_marginStart="50dp"
                android:background="@drawable/app_widget_buttons_circular"
                android:scaleType="fitCenter"
                tools:src="@drawable/ic_skip_next"
                tools:tint="@color/ate_secondary_text_dark" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>